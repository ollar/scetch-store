<h1>
    {{model.title}}
</h1>

{{#quick-links}}
    {{link-to (t 'links.category_edit') 'category.edit' model}}

    <button type="button" {{action 'removeCategory'}}>
        {{t 'buttons.remove_category'}}
    </button>
{{/quick-links}}

<div class="page-content">
    {{#swiper-container}}
        {{#each model.images as |image|}}
            <div class="swiper-slide">
                <img src="{{image.url}}" class="pure-img" alt="">
            </div>
        {{/each}}
    {{/swiper-container}}

    {{#each model.blocks as |block|}}
        {{page-block block=block}}
    {{/each}}

    <h2>{{t 'category.products'}}</h2>
    {{#each model.products as |product|}}
        {{product-block product=product}}
    {{else}}
        {{t 'messages.empty'}}
    {{/each}}
</div>
