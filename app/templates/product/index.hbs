{{#swiper-container class="images-wrapper"}}
    {{#each model.images as |image|}}
        <div class="swiper-slide">
            <img src="{{image.url}}" class="pure-img" alt="">
        </div>
    {{/each}}
{{/swiper-container}}

<h1>
    {{model.title}}
</h1>

{{quick-links
    type='product'
    model=model
    remove=(action 'removeProduct')}}

<div class="page-content">

    {{t 'products.price'}} {{model.price}}

    {{#each model.blocks as |block|}}
        {{page-block block=block}}
    {{/each}}
</div>
