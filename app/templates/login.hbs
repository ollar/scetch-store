<div class="center-wrapper content-wrapper">
  <h1>
    {{t 'login.title'}}
  </h1>

  <form class="pure-form pure-form-stacked" {{action 'handleSubmit' on='submit'}}>
    <div class="pure-control-group">
      <label for="email">{{t 'forms.email.label'}}</label>
      {{input
        class="email"
        type="email"
        id="email"
        placeholder=(t 'forms.email.placeholder')
        value=email
        }}
    </div>


    <div class="pure-control-group">
      <label for="password">{{t 'forms.password.label'}}</label>
      {{input
        class="password"
        type="password"
        id="password"
        placeholder=(t 'forms.password.placeholder')
        value=password
        }}
    </div>

    <div class="pure-controls">
      <button type="submit" class="pure-button pure-button-primary">{{t 'buttons.login'}}</button>
    </div>
  </form>
</div>


{{outlet}}
